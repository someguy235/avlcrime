doctype 5
html(lang="en")
  head
    title= "Asheville Crime Map"
    meta(http-equiv="Content-Type", content="text/html; charset=iso-8859-1")

    link(rel="stylesheet" href="/avlcrime/resources/css/main.css")
    link(rel="stylesheet" href="/avlcrime/resources/vendor/leaflet/leaflet.css")
    link(rel="stylesheet" href="/avlcrime/resources/css/bootstrap.min.css")
    //link(rel="stylesheet" href="/avlcrime/resources/css/nv.d3.css")
  body
    div(ng-app="CrimeApp")
      div.row-fluid.span12
        div.main.centered.span2(ng-controller="FormController")
          form(ng-submit="")
            div.row-fluid.btn-group-vertical(data-toggle="buttons-checkbox")
              button.btn.btn-primary(ng-repeat="offense in offenses" ng-model="offense.selected" value="{{offense.name}}" type="checkbox" checkbox-toggle="") {{offense.name}} 
            br
            br
            div.row-fluid.btn-group-vertical(data-toggle="buttons-checkbox")
              button.btn.btn-primary(ng-repeat="year in years" ng-model="year.selected" value="{{year.name}}" type="checkbox" checkbox-toggle="") {{year.name}}
        div.main.centered.span9(ng-controller="DisplayController")
          div#map
    script(type="text/javascript" src="/avlcrime/resources/js/jquery-1.7.1.min.js")
    script(type="text/javascript" src="/avlcrime/resources/js/bootstrap.min.js")
    script(type="text/javascript" src="/avlcrime/resources/js/angular.min.js")
    script(type="text/javascript" src="/avlcrime/resources/vendor/leaflet/leaflet.js")
    //script(type="text/javascript" src="/avlcrime/resources/js/d3.v3.min.js")
    //script(type="text/javascript" src="/avlcrime/resources/js/nv.d3.min.js")
